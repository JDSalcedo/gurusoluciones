<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- guru_product_log Tree -->
    <record id="guru_product_log_view_tree" model="ir.ui.view">
        <field name="name">guru.product.log.view.tree</field>
        <field name="model">guru.product.log</field>
        <field name="arch" type="xml">
<!--            <tree create="0" edit="0"> -->
            <tree create="1" edit="1">
                <field name="user_id"/>
                <field name="date"/>
                <field name="model"/>
                <field name="res_id"/>
                <field name="initial_state"/>
                <field name="final_state"/>
                <field name="message"/>
                <field name="technical_message" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- guru_product_log Form -->
    <record id="guru_product_log_view_form" model="ir.ui.view">
        <field name="name">guru.product.log.view.form</field>
        <field name="model">guru.product.log</field>
        <field name="arch" type="xml">
<!--            <form create="0" edit="0">-->
            <form create="1" edit="1">
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="user_id"/>
                            <field name="model"/>
                            <field name="res_id"/>
                        </group>
                        <group>
                            <field name="initial_state"/>
                            <field name="final_state"/>
                            <field name="message"/>
                        </group>
                    </group>
                    <label for="technical_message"/>
                    <field name="technical_message"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- guru_product_log Action -->
    <record id="guru_product_log_view_action" model="ir.actions.act_window">
        <field name="name">Log de Productos</field>
        <field name="res_model">guru.product.log</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>